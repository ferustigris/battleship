#:kivy 1.0.9

<RootWidget>:
    rootLayout: rootLayoutId
    BoxLayout:
        id: rootLayoutId
        orientation: "vertical"
        size: root.width, root.height
        pos: 0, 0

<FieldWidget>:    
    fields: [fieldGridLeft, fieldGridRight]
    header: topGrid
    topHeight: self.height/5
    fieldHeight: self.height - self.topHeight
    BoxLayout: 
        id: topGrid
        pos: 0, root.height - root.topHeight
        size: root.width, root.topHeight
        Label:
            size: 99, root.topHeight
            text: "x" + str(root.score)
            font_size: "30sp" 
    BoxLayout: 
        size: root.width, root.fieldHeight
        GridLayout:
            id: fieldGridLeft
            size: root.width/2, root.fieldHeight
            cols: 5
        GridLayout:
            id: fieldGridRight
            size: root.width/2, root.fieldHeight
            cols: 5
    Label:
        text: root.text
        pos: root.width/2, root.height/2
        font_size: "150sp" 
        on_touch_down: root.text = ""

<HelloWidget>:    
    topHeight: self.height/5
    fieldHeight: self.height - self.topHeight
    canvas:
        Rectangle:
            source: "images/background.png"
            size: self.size
            pos: self.pos
    BoxLayout: 
        orientation: "vertical"
        size: root.width/3, root.fieldHeight/2
        pos: root.width/3, root.height/4
        Button:
            markup: True
            text: "[color=000000][b]" + "Human vs Android" + "[/b][/color]"
            background_normal: "images/missile.png"
            on_press: root.startHumanVsAndroidGame()
        Button:
            text: "Human vs Human"
            background_normal: "images/missile.png"
            on_press: root.startHumanVsHumanGame()
        Button:
            text: "Exit"
            on_press: root.exitGame()



