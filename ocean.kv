#:kivy 1.0.9

<FieldWidget>:    
    fields: [fieldGridLeft, fieldGridRight]
    GridLayout:
        id: fieldGridLeft
        pos: 0, 0
        size: root.width/2, root.height
        cols: 5
    GridLayout:
        id: fieldGridRight
        pos: root.center_x, 0
        size: root.width/2, root.height
        cols: 5
    Label:
        text: root.text
        pos: root.width/2, root.height/2
        font_size: "150sp" 
        on_touch_down: root.text = ""
    Label:
        text: str(root.score)
        pos: root.width - self.width, root.height - self.height
        font_size: "30sp" 
<<CellWidget>: 
