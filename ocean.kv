#:kivy 1.0.9

<RootWidget>:
    rootLayout: rootLayoutId
    BoxLayout:
        id: rootLayoutId
        orientation: "vertical"
        size: root.width, root.height
        pos: 0, 0

<UnitWidget>: 
    text: "0" 
    source: "images/exit_menuitem.png"
    disabled: root.text == "0"
    BoxLayout: 
        pos: root.pos 
        size: root.size
        AsyncImage:
            source: str(root.source)
        Label:
            text: str(root.text)
            color: (0, 0, 0, 1)
            font_size: str(root.height/3) + "sp" 

<FieldWidget>:    
    fields: [fieldGridLeft, fieldGridRight]
    header: topGrid
    topHeight: self.height/5
    fieldHeight: self.height - self.topHeight
    canvas:
        Rectangle:
            source: "images/background.png"
            size: self.size
            pos: self.pos
    BoxLayout: 
        id: topGrid
        pos: 0, root.height - root.topHeight
        size: root.width, root.topHeight
        UnitWidget:
            text: str(root.defaultUnits)
            source: "images/ship.png"
        UnitWidget:
            text: str(root.missile)
            source: "images/missile.png"
        UnitWidget:
            text: str(root.missile_biology)
            source: "images/missile_biology.png"
        UnitWidget:
            text: str(root.missile_nuk)
            source: "images/missile_nuk.png"
        UnitWidget:
            text: str(root.bombs)
            source: "images/bomb.png"
        UnitWidget:
            text: str(root.score)
            source: "images/ship.png"
    BoxLayout: 
        size: root.width - root.width/20, root.fieldHeight - root.height/20
        pos: root.width/40, root.height/40
        spacing: root.height/40
        GridLayout:
            id: fieldGridLeft
            size: root.width/2, root.fieldHeight
            cols: 5
            spacing: 5
        GridLayout:
            id: fieldGridRight
            size: root.width/2, root.fieldHeight
            cols: 5
            spacing: 5
    Label:
        text: root.text
        pos: root.width/2, root.height/2
        font_size: "150sp" 
        on_touch_down: root.text = ""

<HelloWidget>:    
    topHeight: self.height/5
    fieldHeight: self.height - self.topHeight
    canvas:
        Rectangle:
            source: "images/menu_background.png"
            size: self.size
            pos: self.pos
    BoxLayout: 
        orientation: "vertical"
        size: root.width/3, root.fieldHeight/2
        pos: root.width/3, root.height/4
        Button:
            markup: True
            text: ""
            background_normal: "images/human_x_android_menuitem.png"
            on_press: root.startHumanVsAndroidGame()
        Button:
            text: ""
            background_normal: "images/settings_menuitem.png"
            on_press: root.startHumanVsHumanGame()
        Button:
            text: ""
            on_press: root.exitGame()
            background_normal: "images/exit_menuitem.png"



<CellWidget>: 
    background_normal: "images/empty_cell.png"
    background_down: "images/empty_cell.png"
    size: 100, 100

